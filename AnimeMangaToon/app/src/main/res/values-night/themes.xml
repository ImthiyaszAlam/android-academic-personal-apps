<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->

        <!--<item name="android:actionMenuTextColor">@color/menusColor</item>-->

        <item name="colorPrimary">#1D1B1B</item>
    </style>


    <style name="AppTheme.Toolbar" parent="AppTheme">
        <!--This line changes the color of text in Toolbar-->
        <item name="android:textColorPrimary">@color/primaryColor</item>
        <!--This line changes the color of icons in toolbar (back, overflow menu icons)-->
        <item name="android:textColorSecondary">@color/primaryColor</item>
    </style>

    <style name="MenuTextWhite" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CustomToolbarTitle" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textColor">@color/primaryColor</item>
        <item name="background">@color/black</item>
    </style>
</resources>