<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:backgroundTint="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:padding="5dp"
        android:layout_margin="10dp"
        android:background="@drawable/featured_image_bg"
        app:cardElevation="10dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:backgroundTint="@color/white"
            android:background="@color/white"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleType="center"
                android:background="@drawable/featured_image_bg"
                android:src="@drawable/image1"/>

            <TextView
                android:id="@+id/featuredText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FEATURED"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textSize="16dp"
                android:textColor="@color/primaryColor"/>


            <TextView
                android:id="@+id/titleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="The Remarried Empress Chapter 25-32: Navier And Heinreyâ€™s Fret"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/descriptionText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I Love Yoo Chapter 9-16 deals with Shin-ae meeting Yeong-gi and feeling conflicted about her usual nature and being vulnerable by opening up."
                android:textColor="@color/black"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>